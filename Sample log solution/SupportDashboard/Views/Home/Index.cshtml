@model List<SupportDashboard.Models.Ticket>

<!DOCTYPE html>
<html>
<head>
    <title>Support Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #f8fafc, #e0f2fe, #f0fdfa);
        }

        .header-animated {
            background: linear-gradient(90deg, #1e3a8a, #2563eb);
            color: white;
        }

        .card-row {
            background: rgba(255, 255, 255, 0.65);
            backdrop-filter: blur(5px);
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            transition: all 0.3s;
        }

            .card-row:hover {
                box-shadow: 0 8px 20px rgba(0,0,0,0.15);
                transform: translateY(-4px);
            }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
            transition: all 0.2s ease-in-out;
        }
    </style>
</head>
<body class="container mt-5">

    <div class="header-animated p-4 rounded mb-4">
        <h2>Support Dashboard</h2>
    </div>

    <form method="post" asp-action="Create" class="mb-4">
        <div class="row mb-2">
            <div class="col">
                <input type="text" name="title" class="form-control" placeholder="Title" required />
            </div>
            <div class="col">
                <input type="text" name="description" class="form-control" placeholder="Description" required />
            </div>
            <div class="col">
                <select name="urgency" class="form-select">
                    <option>Low</option>
                    <option>Medium</option>
                    <option>High</option>
                </select>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">➕ Create Ticket</button>
            </div>
        </div>
    </form>

    @if (!Model.Any())
    {
        <p class="text-muted">No tickets yet. Create your first ticket above.</p>
    }
    else
    {
        @foreach (var ticket in Model)
        {
            <div class="card-row">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@ticket.Title</strong> —
                        <span class="badge
                                    @(ticket.Status == "New" ? "bg-secondary" :
                                                            ticket.Status == "Accepted" ? "bg-primary" :
                                                            ticket.Status == "Resolved" ? "bg-success" :
                                                            ticket.Status == "Escalated" ? "bg-danger" : "bg-light")">
                    @ticket.Status
                </span>
                <span class="ms-2">Urgency: <strong>@ticket.Urgency</strong></span>
            </div>
            <div>
                @if (ticket.Status == "New")
                        {
                            <form method="post" asp-action="Accept" style="display:inline;">
                                <input type="hidden" name="id" value="@ticket.Id" />
                                <button type="submit" class="btn btn-success btn-sm">✅ Accept</button>
                            </form>
                        }
                        @if (ticket.Status == "Accepted")
                        {
                            <form method="post" asp-action="Resolve" style="display:inline;">
                                <input type="hidden" name="id" value="@ticket.Id" />
                                <button type="submit" class="btn btn-primary btn-sm">✔️ Resolve</button>
                            </form>
                            <form method="post" asp-action="Escalate" style="display:inline;">
                                <input type="hidden" name="id" value="@ticket.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">⚠️ Escalate</button>
                            </form>
                        }
                </div>
            </div>
            <div class="mt-2 text-muted">
                @ticket.Description
            </div>
            <div class="progress mt-2">
                <div class="progress-bar
                              @(ticket.Status == "New" ? "bg-secondary" :
                                                 ticket.Status == "Accepted" ? "bg-primary" :
                                                 ticket.Status == "Resolved" ? "bg-success" :
                                                 ticket.Status == "Escalated" ? "bg-danger" : "")"
                 role="progressbar"
                 style="width:@(ticket.Status == "New" ? "25%" :
                                                       ticket.Status == "Accepted" ? "50%" :
                                                       ticket.Status == "Resolved" ? "100%" :
                                                       ticket.Status == "Escalated" ? "75%" : "0%")">
            </div>
        </div>
    </div>
        }
    }
</body>
</html>
